@{
    ViewData["Title"] = "Home Page - Digital Sign Rentals";
}

<!-- Header Section -->
<div class="text-center">
    <h1 class="display-4">Digital Sign Rentals for Stadiums</h1>
    <p>Make your brand shine in the biggest stadiums!</p>
</div>

<!-- Bootstrap Carousel -->
<div id="signCarousel" class="carousel slide" data-bs-ride="carousel">
    <!-- ... (carousel-indicators) -->

    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/football.png" class="d-block carousel-image" alt="Digital Sign 1">
        </div>
        <div class="carousel-item">
            <img src="~/images/basketball.png" class="d-block carousel-image" alt="Digital Sign 2">
        </div>
        <div class="carousel-item">
            <img src="~/images/icehockey.png" class="d-block carousel-image" alt="Digital Sign 3">
        </div>
    </div>

    <!-- ... (carousel-control-prev and carousel-control-next) -->
</div>

<!-- Call to Action Button -->
<div class="text-center my-4">
    <a asp-controller="Events" asp-action="EventList" class="btn btn-lg btn-primary">Book Your Event</a>
</div>


<br />
<!-- Additional Information or Footer -->
<div class="text-center">
    <p>Contact us for custom solutions and special offers!</p>
</div>
